<div class="card">
<% @posts.each do |post|%>
    <div class="card-body">
        <h4 class="card-title"><%= post['title'] %></h4>
        <h6 class="card-subtitle mb-2 text-muted"><%= post['start_time'] %> 〜 <%= post['end_time'] %></h6>
        <p class="card-text">
            <%= post['content'] %>
        </p>
        <% if post['image'] %>
            <img src="/images/<%= post['image'] %>">
        <% end %>
    </div>
</div>

<div class="btn-signup">
    <a type="submit" href="/#!" class="btn btn-primary mb-2 detail-btn">削除</a>
</div>
<div class="btn-signup">
    <a type="submit" href="/#!" class="btn btn-primary mb-2 detail-btn">編集</a>
</div>

<% end %>
