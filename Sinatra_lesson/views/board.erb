<h1>予定リスト</h1>

<table class="table table-bordered">
    <thead>
    <tr>
        <th>No.</th>
        <th>件名</th>
        <th>詳細</th>
        <th>開始時刻</th>
        <th>終了時刻</th>
        <th>画像</th>
    </tr>
    </thead>
<% i = 1 %>
<% @posts.each do |post|%>
    <tbody>
    <tr>
        <th scope="row"><%= i %></th>
        <td><a href="/post/<%= post['id'] %>"><%= post['title'] %></a></td>
        <td><%= post['content'] %></td>
        <td><%= post['start_time'] %></td>
        <td><%= post['end_time'] %></td>
        <td>
        <% if post['image'] %>
            <a href="./images/<%= post['image']%>" alt="">image</a>
        <% end %>
        </td>
    </tbody>
    <% i += 1%>
<% end %>
</table>



<div class="btn-signup">
    <a type="submit" href='/new_schedule' class="btn btn-primary mb-2">予定を書き込む</a>
</div>
